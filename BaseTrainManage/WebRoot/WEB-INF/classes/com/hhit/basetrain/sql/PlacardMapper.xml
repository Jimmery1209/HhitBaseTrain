<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.hhit.basetrain.dao.PlacardDao">
	<!-- 根据发布名查找公告 -->
	<select id="findByAuthorName" parameterType="string" resultType="map">
		select placard_title,placard_content,publish_time from placard where publish_author = #{manager_no}
	</select>

</mapper>