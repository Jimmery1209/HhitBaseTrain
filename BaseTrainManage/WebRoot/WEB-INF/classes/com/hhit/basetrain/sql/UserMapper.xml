<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 
<mapper namespace="com.hhit.basetrain.dao.UserDao">

	<select id="findByName" parameterType="string"
		resultType="com.hhit.basetrain.entity.User">
		select * from user where Uno = #{name}
	</select>
	
	<insert id="save" parameterType="com.hhit.basetrain.entity.User">
		insert into user(Uno,Upwd,Uidentity)
		values
		(#{Uno},#{Upwd},#{Uidentity})
	</insert>
	
	<delete id="delete" parameterType="string">
		delete from user where Uno = #{Uno}
	</delete>
	
	<update id="mofifyPwd" parameterMap="java.util.Map">
		update user
		set Upwd = '000000'
		where Uno = #{Uno}
	</update>
	
</mapper>